{
  "expo": {
    "name": "App",
    "slug": "berealclone",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "berealclone",
    "userInterfaceStyle": "automatic",
    "ios": {
      "icon": "./assets/myicon/icon.jpg",
      "bundleIdentifier": "com.sunilk.berealclone",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photo library so you can choose photos to upload.",
        "NSCameraUsageDescription": "We need access to your camera so you can take photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "CAMERA",
        "READ_MEDIA_IMAGES"
      ],
      "package": "com.sunilk.berealclone"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#208AEF",
          "android": {
            "image": "./assets/images/splash-icon.png",
            "imageWidth": 76
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
